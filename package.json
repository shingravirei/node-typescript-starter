{
    "name": "ts",
    "version": "0.2.2",
    "description": "A node/typescript project template",
    "main": "index.js",
    "scripts": {
        "dev": "node-dev ./src/index.ts --respawn --clear",
        "check": "tsc",
        "build": "esbuild ./src/index.ts --bundle --platform=node --outfile=./dist/index.js",
        "start": "node ./dist/index.js",
        "test": "jest --watch",
        "clean": "rm -rf ./dist/*"
    },
    "keywords": [
        "typescript",
        "node",
        "project",
        "starter"
    ],
    "author": "shingravirei",
    "license": "MIT",
    "devDependencies": {
        "@types/jest": "^27.0.1",
        "@types/node": "^16.9.1",
        "@typescript-eslint/eslint-plugin": "^4.31.0",
        "@typescript-eslint/parser": "^4.31.0",
        "eslint": "^7.32.0",
        "eslint-plugin-import": "^2.24.2",
        "jest": "^27.1.1",
        "node-dev": "^7.0.0",
        "ts-jest": "^27.0.5",
        "ts-node": "^10.2.1",
        "typescript": "^4.4.3"
    },
    "dependencies": {
        "esbuild": "^0.13.7"
    }
}
