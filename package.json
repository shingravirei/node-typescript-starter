{
	"name": "ts",
	"version": "0.1.0",
	"description": "A node/typescript project template",
	"main": "index.ts",
	"scripts": {
		"dev": "NODE_ENV=development nodemon src/main.ts",
		"check": "tsc",
		"build": "tsc -b",
		"start": "node ./dist/index.js",
		"test": "vitest -w",
		"clean": "rm -rf ./dist/*"
	},
	"keywords": [
		"typescript",
		"node",
		"project",
		"starter"
	],
	"author": "shingravirei",
	"license": "MIT",
	"devDependencies": {
		"@swc/core": "^1.2.189",
		"@swc/helpers": "^0.3.13",
		"@types/node": "^17.0.35",
		"@typescript-eslint/eslint-plugin": "^5.25.0",
		"@typescript-eslint/parser": "^5.25.0",
		"eslint": "^8.16.0",
		"nodemon": "^2.0.16",
		"regenerator-runtime": "^0.13.9",
		"ts-node": "^10.8.0",
		"typescript": "^4.6.4",
		"vitest": "^0.12.9"
	},
	"nodemonConfig": {
		"events": {
			"start": "clear"
		},
		"watch": [
			"src"
		],
		"ignore": [
			"*.test.ts"
		]
	}
}
