{
	"name": "ts",
	"version": "0.1.0",
	"description": "A node/typescript project template",
	"type": "module",
	"scripts": {
		"dev": "NODE_ENV=development nodemon src/main.ts",
		"check": "tsc",
		"build": "npm run clean && tsc -p ./tsconfig.prod.json",
		"start": "node ./dist/main.js",
		"test": "vitest -w",
		"clean": "rm -rf ./dist/*",
		"prepare": "husky install"
	},
	"keywords": [
		"typescript",
		"node",
		"project",
		"starter"
	],
	"author": "shingravirei",
	"license": "MIT",
	"devDependencies": {
		"@commitlint/cli": "17.4.2",
		"@commitlint/config-conventional": "17.4.2",
		"@swc/core": "1.3.32",
		"@swc/helpers": "0.4.14",
		"@types/node": "18.11.19",
		"husky": "8.0.3",
		"nodemon": "2.0.20",
		"rome": "11.0.0",
		"ts-node": "10.9.1",
		"typescript": "4.9.5",
		"vitest": "0.28.4"
	},
	"commitlint": {
		"extends": [
			"@commitlint/config-conventional"
		]
	},
	"lint-staged": {
		"*.{ts,js}": [
			"npx rome check src",
			"npx rome format src  --write"
		]
	},
	"nodemonConfig": {
		"events": {
			"start": "clear"
		},
		"watch": [
			"src"
		],
		"ignore": [
			"*.test.ts"
		]
	}
}
