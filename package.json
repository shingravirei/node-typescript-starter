{
	"name": "ts",
	"version": "0.1.0",
	"description": "A node/typescript project template",
	"type": "module",
	"scripts": {
		"dev": "tsx watch src/main.ts",
		"check": "tsc --noEmit -p ./tsconfig.prod.json && eslint .",
		"build": "npm run clean && tsc -p ./tsconfig.prod.json",
		"start": "node ./dist/main.js",
		"test": "vitest",
		"test:ui": "vitest --ui --coverage",
		"coverage": "vitest run --coverage",
		"clean": "rm -rf ./dist/*",
		"prepare": "husky install"
	},
	"keywords": [
		"typescript",
		"node",
		"project",
		"starter"
	],
	"author": "shingravirei",
	"license": "MIT",
	"commitlint": {
		"extends": [
			"@commitlint/config-conventional"
		]
	},
	"lint-staged": {
		"*.{ts,js}": [
			"npx eslint",
			"npx prettier --write"
		]
	},
	"engines": {
		"node": ">=20.0.0"
	},
	"nodemonConfig": {
		"events": {
			"start": "clear"
		},
		"watch": [
			"src"
		],
		"ignore": [
			"*.test.ts"
		]
	},
	"devDependencies": {
		"@commitlint/cli": "^18.1.0",
		"@commitlint/config-conventional": "^18.1.0",
		"@swc/core": "^1.3.95",
		"@types/node": "20.8.8",
		"@typescript-eslint/eslint-plugin": "6.9.0",
		"@typescript-eslint/parser": "6.9.0",
		"@vitest/coverage-v8": "^0.34.6",
		"@vitest/ui": "^0.34.6",
		"eslint": "8.52.0",
		"eslint-config-prettier": "9.0.0",
		"eslint-plugin-unicorn": "48.0.1",
		"husky": "8.0.3",
		"lint-staged": "^15.0.2",
		"prettier": "^3.0.3",
		"tsx": "3.14.0",
		"typescript": "5.2.2",
		"vitest": "0.34.6"
	}
}
