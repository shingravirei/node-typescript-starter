{
	"name": "ts",
	"version": "0.1.0",
	"description": "A node/typescript project template",
	"type": "module",
	"scripts": {
		"dev": "NODE_ENV=development nodemon src/main.ts",
		"check": "tsc",
		"build": "npm run clean && tsc -p ./tsconfig.prod.json",
		"start": "node ./dist/main.js",
		"test": "vitest -w",
		"clean": "rm -rf ./dist/*",
		"prepare": "husky install"
	},
	"keywords": [
		"typescript",
		"node",
		"project",
		"starter"
	],
	"author": "shingravirei",
	"license": "MIT",
	"devDependencies": {
		"@commitlint/cli": "17.5.1",
		"@commitlint/config-conventional": "17.4.4",
		"@swc/core": "1.3.46",
		"@swc/helpers": "0.5.0",
		"@types/node": "18.15.11",
		"@typescript-eslint/eslint-plugin": "5.57.1",
		"@typescript-eslint/parser": "5.57.1",
		"eslint": "8.37.0",
		"eslint-config-prettier": "8.8.0",
		"eslint-plugin-prettier": "4.2.1",
		"eslint-plugin-unicorn": "46.0.0",
		"husky": "8.0.3",
		"nodemon": "2.0.22",
		"prettier": "2.8.7",
		"ts-node": "10.9.1",
		"typescript": "5.0.3",
		"vitest": "0.29.8"
	},
	"commitlint": {
		"extends": [
			"@commitlint/config-conventional"
		]
	},
	"lint-staged": {
		"*.{ts,js}": [
			"npx eslint",
			"npx prettier --write"
		]
	},
	"nodemonConfig": {
		"events": {
			"start": "clear"
		},
		"watch": [
			"src"
		],
		"ignore": [
			"*.test.ts"
		]
	}
}
