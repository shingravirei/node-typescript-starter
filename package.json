{
	"name": "ts",
	"version": "0.1.0",
	"description": "A node/typescript project template",
	"main": "index.ts",
	"scripts": {
		"dev": "NODE_ENV=development nodemon src/main.ts",
		"check": "tsc",
		"build": "tsc -b",
		"start": "node ./dist/index.js",
		"test": "vitest -w",
		"clean": "rm -rf ./dist/*",
		"prepare": "husky install"
	},
	"keywords": [
		"typescript",
		"node",
		"project",
		"starter"
	],
	"author": "shingravirei",
	"license": "MIT",
	"devDependencies": {
		"@commitlint/cli": "^17.0.2",
		"@commitlint/config-conventional": "^17.0.2",
		"@swc/core": "^1.2.196",
		"@swc/helpers": "^0.3.17",
		"@types/node": "^17.0.39",
		"@typescript-eslint/eslint-plugin": "^5.27.0",
		"@typescript-eslint/parser": "^5.27.0",
		"eslint": "^8.17.0",
		"husky": "^8.0.1",
		"nodemon": "^2.0.16",
		"regenerator-runtime": "^0.13.9",
		"ts-node": "^10.8.1",
		"typescript": "^4.7.3",
		"vite-tsconfig-paths": "^3.5.0",
		"vitest": "^0.13.1"
	},
	"commitlint": {
		"extends": [
			"@commitlint/config-conventional"
		]
	},
	"lint-staged": {
		"*.{ts,tsx}": [
			"npx eslint",
			"npx prettier --write"
		]
	},
	"nodemonConfig": {
		"events": {
			"start": "clear"
		},
		"watch": [
			"src"
		],
		"ignore": [
			"*.test.ts"
		]
	}
}
